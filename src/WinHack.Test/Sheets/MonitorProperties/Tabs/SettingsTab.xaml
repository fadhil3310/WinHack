<UserControl x:Class="WinHack.Test.Sheets.MonitorProperties.Tabs.SettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinHack.Test.Sheets.MonitorProperties.Tabs"
             mc:Ignorable="d" 
													x:Name="root"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="268" d:DesignWidth="208"
             d:Background="White">
				<ScrollViewer>
								<StackPanel>
												<!-- Resolution -->
												<GroupBox Header="Resolution">
																<StackPanel>
																				<Label>Supported Resolutions:</Label>
																				<ListBox ItemsSource="{Binding SupportedResolutions}">
																								<ListBox.ItemTemplate>
																												<DataTemplate>
																																<TextBlock>
																																				<Run Text="{Binding Width}" />
																																				<Run Text="x" />
																																				<Run Text="{Binding Height}" />
																																</TextBlock>
																												</DataTemplate>
																								</ListBox.ItemTemplate>
																				</ListBox>

																				<Label>Width:</Label>
																				<TextBox x:Name="resWidthTextBox" />
																				<Label>Height:</Label>
																				<TextBox x:Name="resHeightTextBox" />
																				<Button x:Name="resSetBtn" Command="{Binding SetResolutionCommand}">Set</Button>
																</StackPanel>
												</GroupBox>

												<!-- Other -->
												<GroupBox Header="Other">
																<StackPanel>
																				<!-- Orientation -->
																				<Label>Orientation:</Label>
																				<ComboBox x:Name="orientationComboBox" 
																										ItemsSource="{Binding OrientationModes, Mode=OneWay}" 
																										SelectedItem="{Binding SelectedOrientation}">
																								<ComboBox.ItemTemplate>
																												<DataTemplate>
																																<TextBlock Text="{Binding Text}" />
																												</DataTemplate>
																								</ComboBox.ItemTemplate>
																				</ComboBox>
																				<Button Command="{Binding SetOrientationCommand}">Set Orientation</Button>

																				<!-- Refresh Rate -->
																				<Label>Refresh Rate:</Label>
																				<ListBox ItemsSource="{Binding SupportedRefreshRates}">
																								<ListBox.ItemTemplate>
																												<DataTemplate>
																																<TextBlock>
																																				<Run Text="{Binding Mode=OneWay}" />
																																</TextBlock>
																												</DataTemplate>
																								</ListBox.ItemTemplate>
																				</ListBox>
																				<TextBox x:Name="refreshRateTextBox" />
																				<Button Command="{Binding SetRefreshRateCommand}">Set Refresh Rate</Button>
																</StackPanel>
												</GroupBox>
								</StackPanel>
				</ScrollViewer>
</UserControl>
