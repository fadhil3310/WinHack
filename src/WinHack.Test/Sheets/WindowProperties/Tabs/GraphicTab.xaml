<UserControl x:Class="WinHack.Test.Sheets.WindowProperties.Tabs.GraphicTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinHack.Test.Sheets.WindowProperties.Tabs"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="268" d:DesignWidth="208"
             d:Background="White">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
								<StackPanel>
												<GroupBox Header="Simple Drawing">
																<StackPanel>
																				<Button x:Name="getImageBtn" Command="{Binding GetImageCommand}">Get image</Button>
																				<Button x:Name="copyScreenToWindowBtn" Command="{Binding CopyScreenToWindowCommand}">Copy screen to window</Button>
																</StackPanel>
												</GroupBox>
												<GroupBox Header="Animation">
																<Button x:Name="animRectangleButton" Command="{Binding AnimRectangleCommand}">Rectangle</Button>
												</GroupBox>
								</StackPanel>
				</ScrollViewer>
</UserControl>
